{
  "name": "use-standard-schema",
  "version": "0.1.0",
  "description": "A React hook for managing form state using any standard schema compliant validation library.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format cjs,esm --dts",
    "format": "biome format --write",
    "fix": "tsc --noEmit && biome check --fix"
  },
  "keywords": [
    "zod",
    "valibot",
    "arktype",
    "use-standard-schema",
    "useStandardSchema",
    "standard schema",
    "validation",
    "form",
    "react",
    "hook",
    "form",
    "form management",
    "form handling",
    "form library",
    "form hook",
    "form state management",
    "form handling library",
    "form state",
    "react hook",
    "form validation",
    "react form",
    "react validation"
  ],
  "author": "Gary Storey <garystoreydev@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "globals": "^16.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^19.1.1"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0"
  }
