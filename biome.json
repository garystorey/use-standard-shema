{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": ["src/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx"]
	},
	"linter": {
		"enabled": true,
		"includes": ["src/**/*.ts"],
		"rules": {
			"a11y": "warn"
		},
		"domains": {
			"react": "recommended"
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"enabled": true
	}
}
